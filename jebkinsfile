pipeline {
    agent any
    
    stages {
        stage('hello') {
            steps {
                echo 'Hello, World!'
            }
        }
        
        stage('build') {
            steps {
                echo 'Building project...'
            }
        }
        
        stage('test') {
            steps {
                echo 'Running tests...'
            }
        }
    }
}
